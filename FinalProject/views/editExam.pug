extends ./layouts/common.pug

block styleSheet
    link(rel="stylesheet", href="/static/styles/headerStyle.css")
    link(rel="stylesheet", href="/static/styles/addExamPage.css")

block content
    include ./includes/navbar.pug
    .main-container
        h1  Sửa đề thi
        .addExam-container
            form.question-detail
                h3  Thông tin câu hỏi 
                .question
                    label(for='text-value') Câu hỏi của bạn là
                    input(type="text", name="text-value", id="text-question")
                .answer
                    label(for='answer-1') Câu trả lời A
                    input(type="text", name="answer-1", id="answer-1")
                .answer
                    label(for='answer-2') Câu trả lời B 
                    input(type="text", name="answer-2", id="answer-2")
                .answer
                    label(for='answer-3') Câu trả lời C 
                    input(type="text", name="answer-3", id="answer-3")
                .answer
                    label(for='answer-4') Câu trả lời D 
                    input(type="text", name="answer-4", id="answer-4")
                .answer
                    label(for='true-answer') Câu trả lời đúng: 
                    select#true-answer(name="true-answer")
                        option(value="A") A
                        option(value="B") B
                        option(value="C") C
                        option(value="D") D
                input#btn-loadContent(type="button", value="Đăng tải dữ liệu")
                input#btn-addQuestion(type="button", value="Sửa tiếp")
        button#btn-complete(style='display: none;') Hoàn thành
    from
        input#examId(type="hidden", value= exam_id)
block scripts
    script(src="/static/JS/editExam.js")